<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title>OnClassroom</title>
    <link rel="stylesheet" href="css/meeting.css" />
</head>

<body>
    <%- include('partials/nav') %>
        <section id="team" class="pb-5">
            <div class="container">
                <% if(meeting){ %>
                    <h5 class="section-title h1">Your Meetings</h5>
                    <% } %>
                        <div class="row">
                            <!-- Team member -->
                            <% for (value in meeting){ %>
                                <div class="col-xs-12 col-sm-6 col-md-4">
                                    <div class="image-flip">
                                        <div class="mainflip flip-0">
                                            <div class="frontside">
                                                <div class="card">
                                                    <div class="card-body text-center">
                                                        <p><img class="img-fluid" src="https://sunlimetech.com/portfolio/boot4menu/assets/imgs/team/img_01.png" alt="card image"></p>
                                                        <h4 class="card-title">
                                                            <%= meeting[value]._id %>
                                                        </h4>
                                                        <p class="card-text">
                                                            <%= meeting[value].discription %>
                                                        </p>
                                                        <a href="https://www.fiverr.com/share/qb8D02" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="backside">
                                                <div class="card">
                                                    <div class="card-body text-center mt-4">
                                                        <h4 class="card-title">
                                                            <%= user.first_name %>
                                                        </h4>
                                                        <p class="card-text w-100">Time:
                                                            <%= meeting[value].dateTime.toLocaleTimeString() %>
                                                        </p>
                                                        <p class="card-text">Date:
                                                            <%= meeting[value].dateTime.toLocaleDateString() %>
                                                        </p>
                                                        <a class="btn btn-danger text-xs-center" target="_blank" href=<%=meeting[value]._id %>>
                                                    Join
                                                </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                    <!-- ./Team member -->
                        </div>
                        <% if(meetinginvite){ %>
                            <h5 class="section-title h1">Meetings Invitation</h5>
                            <% } %>
                                <div class="row">
                                    <!-- Team member -->


                                    <% for (value in meetinginvite) { %>
                                        <div class="col-xs-12 col-sm-6 col-md-4">
                                            <div class="image-flip">
                                                <div class="mainflip flip-0">
                                                    <div class="frontside">
                                                        <div class="card">
                                                            <div class="card-body text-center">
                                                                <p><img class="img-fluid" src="https://sunlimetech.com/portfolio/boot4menu/assets/imgs/team/img_01.png" alt="card image"></p>
                                                                <h4 class="card-title">{{value.meeting_id.meeting_host.first_name}}</h4>
                                                                <p class="card-text">{{value.meeting_id.meeting_disc}}</p>
                                                                <a href="https://www.fiverr.com/share/qb8D02" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i></a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="backside">
                                                        <div class="card">
                                                            <div class="card-body text-center mt-4">
                                                                <h4 class="card-title">{{value.meeting_id.meeting_host.first_name}}</h4>
                                                                <p class="card-text w-100">Time:{{value.meeting_id.meeting_time}}</p>
                                                                <p class="card-text">Date:{{value.meeting_id.meeting_date}}</p>
                                                                <a class="btn btn-danger text-xs-center" target="_blank" href="#">
                                                    Join
                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                            <!-- ./Team member -->
                                </div>
            </div>
        </section>
        <%- include('partials/modals.ejs') %>
</body>

</html>